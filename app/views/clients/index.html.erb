<div class="index-container">
<!-- CLIENTS LIST -->
  <div class="list-container">
    <div class="client-title">
      <h1>Les clients</h1>
    </div>

    <div id="clients">
      <% @clients.each do |client| %>
        <%= render 'clients/list', client: client %>
      <% end %>
    </div>
  </div>
<!-- CLIENT NEW -->
  <div class="simple-form">
    <div class="simple-form-title">
      <h1>Add a client</h1>
    </div>

    <div class="simple-form-content">
      <%= render 'clients/form', client: @client %>
    </div>
  </div>
</div>
