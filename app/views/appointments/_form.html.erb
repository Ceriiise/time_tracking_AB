<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

    <%= simple_form_for [@client, @appointment] do |f| %>

      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>

      <%= f.label :duration, 'How long (in minutes) ?' %>
      <%= f.number_field :duration %>

      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to "Back to appointment", client_path(@client) %>
