<% appointments.each do |appointment| %>
  <div class="app-card-container slide-in-bottom">
    <div class="app-card-date">
      <%= appointment.date.strftime("%e %B %Y") %>
    </div>
    <div class="app-card-time">
     <%= (appointment.duration / 60) %> h <%= (appointment.duration % 60) %> min
    </div>
    <div class="app-card-edit">
      <%= link_to '', edit_client_appointment_path(@client, appointment), class:"fas fa-edit" %>
    </div>
    <div class="app-card-delete" id="delete">
      <%= link_to '', client_appointment_path(@client, appointment), method: :delete, class:"fas fa-trash-alt" %>
    </div>
  </div>
<% end %>
